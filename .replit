modules = ["web", "bash", "python-3.12"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["borgbackup", "cacert", "ffmpeg-full", "glibcLocales", "gnutar", "libcxx", "libffi", "libsndfile", "libxcrypt", "llvm", "pkg-config", "xsimd"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "APEX Web UI"

[[workflows.workflow]]
name = "APEX Web UI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apex_engine && python -m web.app"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
