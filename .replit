modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["ffmpeg-full", "libsndfile", "libxcrypt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run APEX Engine"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "APEX Web UI"

[[workflows.workflow]]
name = "Run APEX Engine"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python apex_engine/main.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "APEX Web UI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apex_engine && python -m web.app"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
